<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>

<addon id="script.module.iapc"
       name="Inter-Addon Procedure Call"
       version="1.0.0"
       provider-name="lekma">

    <requires>
        <import addon="xbmc.python" version="3.0.0" />
    </requires>

    <extension point="xbmc.python.module" library="lib" />

    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Inter-Addon Procedure Call</summary>
        <description lang="en_GB">Inter-Addon Procedure Call addon for Kodi</description>
        <license>GPL-3.0-only</license>
        <platform>all</platform>
        <source>https://github.com/lekma/script.module.iapc</source>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>

</addon>

<addon id="plugin.video.dlive"
       name="DLive"
       version="1.0.0"
       provider-name="lekma">

    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.iapc" version="1.0.0" />
        <import addon="script.module.requests" version="2.22.0" />
    </requires>

    <extension point="xbmc.python.pluginsource" library="lib/plugin.py">
        <provides>video</provides>
    </extension>

	<extension point="xbmc.service" library="lib/service.py" />

    <extension point="xbmc.python.script" library="lib/script.py">
        <provides>executable</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <reuselanguageinvoker>true</reuselanguageinvoker>
        <license>GPL-3.0-only</license>
        <platform>all</platform>
        <source>https://github.com/lekma/plugin.video.dlive</source>
        <assets>
            <icon>resources/media/icon.png</icon>
            <fanart>resources/media/fanart.png</fanart>
        </assets>
        <summary lang="en_GB">DLive Livestreaming Addon</summary>
        <description lang="en_GB">DLive Livestreaming Addon</description>
    </extension>

</addon>

</addons>

